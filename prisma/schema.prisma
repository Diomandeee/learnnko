generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core translation and conversation models
model WordBank {
  id          Int       @id @default(autoincrement())
  word        String
  translation String
  definition  String
  context     String?
  language    String    @default("fr")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Translation {
  id          Int       @id @default(autoincrement())
  sourceText  String
  translation String
  similar     String[]  @default([])
  createdAt   DateTime  @default(now())
}

model ConversationSession {
  id            Int       @id @default(autoincrement())
  topic         String
  isAutosave    Boolean   @default(false)
  messages      Message[]
  stats         Json?
  startedAt     DateTime  @default(now())
  endedAt       DateTime?
  duration      Int?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Message {
  id                Int                 @id @default(autoincrement())
  sessionId         Int
  session           ConversationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role              String
  content           String
  translation       String?
  audioUrl          String?
  timestamp         DateTime            @default(now())
  mood              String?
  correctedContent  String?
  grammarNotes      String[]
  createdAt         DateTime            @default(now())
}

// Suggestion models
model SavedSuggestion {
  id          Int      @id @default(autoincrement())
  french      String
  english     String
  context     String?
  category    String   @default("general")
  isFavorite  Boolean  @default(false)
  useCount    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// N'Ko language learning models
model NkoSavedText {
  id          Int      @id @default(autoincrement())
  text        String
  translation String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NkoTranslationHistory {
  id          Int      @id @default(autoincrement())
  sourceText  String
  translation String
  sourceLang  String
  targetLang  String
  createdAt   DateTime @default(now())
}

model NkoLesson {
  id              Int      @id @default(autoincrement())
  slug            String   @unique // URL-friendly identifier
  title           String
  description     String?
  content         Json
  level           String   // "beginner", "intermediate", "advanced"
  module          String   // module identifier
  moduleOrder     Int      @default(0)
  track           String   // "foundations", "grammar", "vocabulary", etc.
  order           Int      // order within module
  prerequisites   String[] // lesson slugs that must be completed first
  topics          String[]
  estimatedTime   Int      @default(0) // estimated time in minutes
  duration        String   @default("30 minutes")
  tags            String[]
  objectives      String[]
  vocabulary      String[]
  grammarPoints   String[]
  culturalNotes   String[]
  isActive        Boolean  @default(true)
  difficulty      Int      @default(1) // 1-5 scale
  progress        NkoUserLessonProgress[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// User authentication and profile models
model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String    // bcrypt hashed
  name        String?
  avatar      String?
  role        Role      @default(STUDENT)
  
  // Profile fields
  nativeLanguage     String?
  learningGoals     String[]
  dailyTimeGoal     Int       @default(15) // minutes
  timezone          String?
  joinedAt          DateTime  @default(now())
  lastActiveAt      DateTime  @default(now())
  
  // Progress tracking
  totalTimeSpent    Int       @default(0) // minutes
  streakDays        Int       @default(0)
  longestStreak     Int       @default(0)
  lastStudyDate     DateTime?
  
  // Relations
  lessonProgress    NkoUserLessonProgress[]
  achievements      UserAchievement[]
  srsCards          SRSCard[]
  srsSessions       SRSSession[]
  srsStats          SRSUserStats?
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model UserAchievement {
  id            String      @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime    @default(now())
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  
  @@unique([userId, achievementId])
}

model Achievement {
  id          String   @id @default(cuid())
  name        String
  description String
  icon        String
  category    String   // "progress", "streak", "mastery", etc.
  requirement Json     // conditions to unlock
  
  users       UserAchievement[]
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model NkoUserProgress {
  id            Int       @id @default(autoincrement())
  alphabet      Int       @default(0)
  vocabulary    Int       @default(0)
  grammar       Int       @default(0)
  conversation  Int       @default(0)
  streak        Int       @default(0)
  totalTime     Int       @default(0) // in minutes
  lastStudied   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model NkoUserLessonProgress {
  id                   Int      @id @default(autoincrement())
  userId               String?  // Make optional for now to allow existing data
  lessonId             Int
  
  // Basic progress
  completed            Boolean  @default(false)
  progress             Float    @default(0) // 0-100 percentage
  timeSpent            Int      @default(0) // in minutes
  sectionsCompleted    String[] // array of section IDs
  quizCompleted        Boolean  @default(false)
  quizScores           Json[]   @default([])
  currentSection       Int      @default(0)
  lastPosition         Int      @default(0)
  exercisesCompleted   String[] @default([])
  notes                String?
  lastAccessed         DateTime @default(now())
  
  // Enhanced tracking
  startedAt            DateTime?
  completedAt          DateTime?
  attemptCount         Int      @default(0)
  bestScore            Int      @default(0)
  totalTimeSpent       Int      @default(0) // accumulated minutes
  hintsUsed            Int      @default(0)
  mistakeCount         Int      @default(0)
  
  // Spaced repetition
  nextReviewDate       DateTime?
  reviewLevel          Int      @default(0)
  masteryScore         Float    @default(0.0)
  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Relations
  lesson               NkoLesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user                 User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, lessonId])
}

model NkoUserVocabulary {
  id           Int       @id @default(autoincrement())
  word         String
  translation  String
  definition   String?
  example      String?
  difficulty   String    @default("beginner")
  mastery      Float     @default(0) // 0-100 percentage
  timesReviewed Int      @default(0)
  lastReviewed DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model NkoUserFavorite {
  id        Int      @id @default(autoincrement())
  entryId   Int      // ID of favorited dictionary entry or content
  entryType String   // "dictionary", "lesson", "vocabulary", etc.
  createdAt DateTime @default(now())
}

// Dictionary models
model NkoDictionaryCategory {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NkoDictionaryEntry {
  id            Int      @id @default(autoincrement())
  nkoText       String
  pronunciation String?
  translation   String
  definition    String?
  examples      String[]
  categories    String[] // category slugs
  difficulty    String   @default("beginner")
  audioUrl      String?
  tags          String[]
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ==========================================
// Spaced Repetition System (SRS) Models
// ==========================================

enum CardStatus {
  NEW
  LEARNING
  REVIEW
  RELEARNING
  MASTERED
}

enum CardType {
  VOCABULARY
  LESSON
  CHARACTER
  PHRASE
}

model SRSCard {
  id            String      @id @default(cuid())
  userId        String
  cardType      CardType
  contentId     String      // Reference to vocabulary, lesson, etc.
  
  // SM-2 Algorithm fields
  easeFactor    Float       @default(2.5)  // EF starts at 2.5
  interval      Int         @default(0)     // Current interval in days
  repetitions   Int         @default(0)     // Successful repetitions count
  nextReviewDate DateTime   @default(now())
  lastReviewDate DateTime?
  status        CardStatus  @default(NEW)
  streak        Int         @default(0)     // Consecutive correct answers
  lapses        Int         @default(0)     // Times card was forgotten
  
  // Denormalized content for display (avoids joins during review)
  front         String      // Question/prompt (e.g., N'Ko word)
  back          String      // Answer (e.g., English translation)
  pronunciation String?
  example       String?
  audioUrl      String?
  
  // Review history (stored as JSON array of quality ratings 0-5)
  qualityHistory Int[]      @default([])
  
  // Relations
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews       SRSReview[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@unique([userId, cardType, contentId])
  @@index([userId, nextReviewDate])
  @@index([userId, status])
}

model SRSReview {
  id            String      @id @default(cuid())
  cardId        String
  userId        String
  
  // Review details
  quality       Int         // Quality rating 0-5
  responseTimeMs Int        // How long user took to respond
  
  // State before review (for analytics)
  previousEF    Float
  previousInterval Int
  previousStatus CardStatus
  
  // State after review
  newEF         Float
  newInterval   Int
  newStatus     CardStatus
  
  // Relations
  card          SRSCard     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  session       SRSSession? @relation(fields: [sessionId], references: [id])
  sessionId     String?
  
  createdAt     DateTime    @default(now())
  
  @@index([userId, createdAt])
  @@index([cardId])
}

model SRSSession {
  id            String      @id @default(cuid())
  userId        String
  
  // Session timing
  startedAt     DateTime    @default(now())
  endedAt       DateTime?
  
  // Session statistics
  cardsReviewed Int         @default(0)
  correctCount  Int         @default(0)
  incorrectCount Int        @default(0)
  averageQuality Float      @default(0)
  totalTimeMs   Int         @default(0)
  
  // Relations
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews       SRSReview[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([userId, startedAt])
}

model SRSUserStats {
  id            String      @id @default(cuid())
  userId        String      @unique
  
  // Card counts by status
  totalCards    Int         @default(0)
  newCards      Int         @default(0)
  learningCards Int         @default(0)
  reviewCards   Int         @default(0)
  masteredCards Int         @default(0)
  
  // Review statistics
  totalReviews  Int         @default(0)
  reviewsToday  Int         @default(0)
  reviewsThisWeek Int       @default(0)
  reviewsThisMonth Int      @default(0)
  
  // Performance metrics
  averageEaseFactor Float   @default(2.5)
  retentionRate Float       @default(0)
  currentStreak Int         @default(0)
  longestStreak Int         @default(0)
  
  // Time tracking
  totalStudyTimeMinutes Int @default(0)
  
  lastReviewDate DateTime?
  lastStatsUpdate DateTime  @default(now())
  
  // Relations
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
