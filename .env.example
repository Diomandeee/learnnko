# ========================================
# learnnko Environment Variables
# Copy this file to .env.local and fill in your values
# ========================================

# ----------------------------------------
# Core Backend (cc-music-pipeline on GCP Cloud Run)
# ----------------------------------------
ANALYZER_BACKEND_URL=https://cc-music-pipeline-owq2vk3wya-uc.a.run.app

# ----------------------------------------
# Supabase (Database & Auth)
# ----------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ----------------------------------------
# Authentication (NextAuth.js)
# ----------------------------------------
NEXTAUTH_URL=https://www.learnnko.com
NEXTAUTH_SECRET=your-secret-key

# ----------------------------------------
# AI Services
# ----------------------------------------
# Google Gemini (for N'Ko translation, conversation, chat)
GEMINI_API_KEY=your-gemini-api-key

# Anthropic Claude (for dictionary, lessons, TTS generation)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (optional, for additional AI features)
OPENAI_API_KEY=your-openai-api-key

# ----------------------------------------
# Google Cloud Services
# ----------------------------------------
# Text-to-Speech
GOOGLE_TTS_API_KEY=your-google-tts-api-key

# Translation API
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# ----------------------------------------
# RAG++ Integration (optional)
# ----------------------------------------
RAG_PLUS_PLUS_URL=https://rag-plusplus-274020562532.us-central1.run.app
RAG_PLUS_PLUS_API_KEY=your-rag-api-key
