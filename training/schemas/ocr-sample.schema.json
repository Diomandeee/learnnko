{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://learnnko.app/schemas/ocr-sample.schema.json",
  "title": "N'Ko OCR Training Sample",
  "description": "Image-text pair for training OCR models on N'Ko script",
  "type": "object",
  "required": ["image", "text"],
  "properties": {
    "image": {
      "type": "string",
      "description": "Base64-encoded image containing N'Ko text, or GCS URI",
      "pattern": "^(data:image\\/[a-z]+;base64,|gs://|https?://).+"
    },
    "text": {
      "type": "string",
      "description": "Ground truth N'Ko text visible in the image"
    },
    "latin": {
      "type": "string",
      "description": "Romanized transliteration of the text"
    },
    "translation": {
      "type": "string",
      "description": "English translation of the text"
    },
    "bounding_boxes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "bounds"],
        "properties": {
          "text": {
            "type": "string",
            "description": "Text within this bounding box"
          },
          "bounds": {
            "type": "object",
            "required": ["x", "y", "width", "height"],
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "width": {"type": "number"},
              "height": {"type": "number"}
            }
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      },
      "description": "Per-word or per-line bounding boxes"
    },
    "image_metadata": {
      "type": "object",
      "properties": {
        "width": {"type": "integer"},
        "height": {"type": "integer"},
        "format": {
          "type": "string",
          "enum": ["jpeg", "png", "webp"]
        },
        "source_video_id": {"type": "string"},
        "frame_index": {"type": "integer"},
        "timestamp_ms": {"type": "integer"}
      }
    },
    "quality": {
      "type": "object",
      "properties": {
        "clarity": {
          "type": "string",
          "enum": ["excellent", "good", "fair", "poor"]
        },
        "ocr_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "human_validated": {
          "type": "boolean"
        }
      }
    }
  },
  "examples": [
    {
      "image": "gs://learnnko-training/ocr/frame_001.jpg",
      "text": "ߒߞߏ ߛߓߍ ߞߎ߬ߙߎ߲߬ߘߎ",
      "latin": "N'ko sɛbɛ kurunden",
      "translation": "N'Ko writing instruction",
      "bounding_boxes": [
        {
          "text": "ߒߞߏ",
          "bounds": {"x": 100, "y": 50, "width": 80, "height": 40},
          "confidence": 0.98
        },
        {
          "text": "ߛߓߍ",
          "bounds": {"x": 200, "y": 50, "width": 70, "height": 40},
          "confidence": 0.95
        }
      ],
      "image_metadata": {
        "width": 1920,
        "height": 1080,
        "format": "jpeg",
        "source_video_id": "xsUrdpKD5wM",
        "frame_index": 45,
        "timestamp_ms": 225000
      },
      "quality": {
        "clarity": "excellent",
        "ocr_confidence": 0.96,
        "human_validated": false
      }
    }
  ]
}

